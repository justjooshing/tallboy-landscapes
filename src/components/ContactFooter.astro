---
import { getFooterContent } from "../lib//footer/index.js";
import ContactForm from "./ContactForm.astro";

const footerContent = await getFooterContent();

const year = new Date().getFullYear();

const {
  contactEmail,
  contactFormSubtitle,
  contactFormTitle,
  contactPhone,
  companyName,
  hours,
  serviceAreas,
} = footerContent?.fields || {};
---

{
  !footerContent ? null : (
    <footer class="contact-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-main">
            <h2>{contactFormTitle}</h2>
            <p>{contactFormSubtitle}</p>

            <ContactForm />
          </div>

          <div class="footer-info">
            <div class="info-section">
              <h3>Contact</h3>
              <p>
                Email: <a href={`mailto:${contactEmail}`}>{contactEmail}</a>
              </p>
              <p>
                Phone: <a href={`tel:${contactPhone}`}>{contactPhone}</a>
              </p>
            </div>

            {hours?.length ? (
              <div class="info-section">
                <h3>Hours</h3>
                {hours.map((h) => (
                  <p>{h}</p>
                ))}
              </div>
            ) : null}

            {serviceAreas?.length ? (
              <div class="info-section">
                <h3>Service Areas</h3>
                {serviceAreas.map((s) => (
                  <p>{s}</p>
                ))}
              </div>
            ) : null}
          </div>
        </div>

        <div class="footer-bottom">
          <p>
            &copy; {year} {companyName}. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  )
}

<style>
  .contact-footer {
    background: var(--dark-earth);
    color: var(--cream);
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: grid;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-main h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-main p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .footer-info {
    display: grid;
    gap: 2rem;
  }

  .info-section h3 {
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
    color: var(--terracotta);
  }

  .info-section p {
    font-size: 0.95rem;
    opacity: 0.85;
    margin-bottom: 0.375rem;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    opacity: 0.7;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .footer-info {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-content {
      grid-template-columns: 1.5fr 1fr;
      gap: 4rem;
    }

    .footer-main h2 {
      font-size: 2.5rem;
    }
  }
</style>
